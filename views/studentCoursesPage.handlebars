<div id="page_mini_title">
    <h2>Courses in {{studentName}}'s {{term}} term</h2>
</div>

<div class="table_container">
    <div id="explain_to_user">
        To check a course's details, please click the <label class="underline">underlined</label> value
    </div>
    <table>
        <thead>
        <tr>
            <th>Course</th>
            <th>Description</th>
            <th>Credits</th>
            <th>Prerequisites</th>
            <th>Grade</th>
            <th></th>
        </tr>
        </thead>

        <tbody>
            {{#each studentCourses}}
                <tr>
                    <td><a href="/courseDetails/{{idCourse}}">{{course}}</a></td>
                    <td>{{description}}</td>
                    <td>{{credits}}</td>
                    <td>{{prereq}}</td>
                    <td>{{grade}}</td>
                    <td><a href="#deleteCourseForm">Delete</a></td>
                </tr>
            {{/each}}
        </tbody>

    </table>
</div>

