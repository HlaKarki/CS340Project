<div id="page_mini_title">
    <h2>Student Data</h2>
</div>

<div class="table_container">
    <div id="explain_to_user">
        To check the schedule of a student, please click the values that are <label class="underline">underlined</label>
    </div>
    <table>
        <thead>
        <tr>
            <th>idStudent</th>
            <th>Username</th>
            <th>Email</th>
            <th>Major</th>
            <th>Address</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            {{#each allStudents}}
                <tr>
                    <td><a href="/studentSchedules/{{studentId}}">{{studentId}}</a></td>
                    <td><a href="/studentSchedules/{{studentId}}">{{username}}</a></td>
                    <td>{{email}}</td>
                    <td>{{major}}</td>
                    <td>{{address}}</td>
                    <td><a href="#updateStudentForm">Update</a></td>
                    <td><a href="#deleteStudentForm" onclick="fillDeleteForm('{{studentId}}')">Delete</a></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{>studentsPageCRUDForm}}

<script>
    function fillDeleteForm(studentId) {
        document.getElementById('studentDelete').value = studentId;
    }
</script>